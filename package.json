{
  "name": "teen_process",
  "version": "2.0.50",
  "description": "A grown up version of Node's spawn/exec",
  "keywords": [
    "child_process",
    "process management",
    "subprocess",
    "spawn",
    "exec",
    "process",
    "child"
  ],
  "bugs": {
    "url": "https://github.com/appium/node-teen_process/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/appium/node-teen_process.git"
  },
  "license": "Apache-2.0",
  "author": "Appium Contributors",
  "main": "./index.js",
  "bin": {},
  "directories": {
    "lib": "lib"
  },
  "files": [
    "index.js",
    "lib",
    "build/lib"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "npm run build -- --clean",
    "dev": "npm run build -- --watch",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:types": "tsc",
    "precommit-lint": "lint-staged",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "prepare": "npm run rebuild",
    "rebuild": "npm run clean && npm run build",
    "test": "mocha"
  },
  "pre-commit": [
    "precommit-msg",
    "precommit-lint"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 100,
    "singleQuote": true
  },
  "dependencies": {
    "bluebird": "3.7.2",
    "lodash": "4.17.21",
    "shell-quote": "1.8.1",
    "source-map-support": "0.5.21"
  },
  "devDependencies": {
    "@appium/eslint-config-appium": "8.0.4",
    "@appium/tsconfig": "0.3.1",
    "@appium/types": "0.13.4",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/bluebird": "3.5.40",
    "@types/chai": "4.3.8",
    "@types/chai-as-promised": "7.1.6",
    "@types/lodash": "4.14.199",
    "@types/mocha": "10.0.2",
    "@types/node": "18.18.5",
    "@types/shell-quote": "1.7.2",
    "@types/sinon": "10.0.19",
    "@types/source-map-support": "0.5.8",
    "@types/ws": "8.5.7",
    "chai": "4.3.10",
    "chai-as-promised": "7.1.1",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "eslint": "8.51.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-mocha": "10.2.0",
    "eslint-plugin-promise": "6.1.1",
    "lint-staged": "14.0.1",
    "mocha": "10.2.0",
    "pre-commit": "1.2.2",
    "prettier": "3.0.3",
    "semantic-release": "22.0.5",
    "sinon": "16.1.0",
    "typescript": "5.2.2",
    "ts-node": "10.9.1"
  },
  "engines": {
    "node": "^14.17.0 || ^16.13.0 || >=18.0.0",
    "npm": ">=8"
  }
}
